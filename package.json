{
  "name": "listadesktop",
  "version": "1.0.0",
  "description": "Um aplicativo para organizar e acompanhar suas m√≠dias favoritas.",
  "main": "main.js",
  "author": "Lintz",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist",
    "build": "npm run clean && electron-builder"
  },
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^24.13.3",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.seu-nome.minhalista",
    "productName": "Minha Lista",
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "Lintzz",
      "repo": "minha-lista-desktop"
    }
  }
}
